{
	"variables"       : 
	{
		"ATLAS_NAME"            : "ConsulServer",
		"ATLAS_TOKEN"           : "{{env `ATLAS_TOKEN`}}",
		"ATLAS_USERNAME"        : "{{env `ATLAS_USERNAME`}}",
		"AWS_ACCESS_KEY_ID"     : "{{env `AWS_ACCESS_KEY_ID`}}",
		"AWS_SECRET_ACCESS_KEY" : "{{env `AWS_SECRET_ACCESS_KEY`}}"
	},                             
                                               
	"builders"        :     
	[                             
	{                                       
		"type"                  : "amazon-ebs",
		"region"                : "us-east-1",
		"ami_name"              : "ConsulServer {{timestamp}}",
		"access_key"            : "{{ user `AWS_ACCESS_KEY_ID` }}",
		"secret_key"            : "{{ user `AWS_SECRET_ACCESS_KEY` }}",
		"source_ami"            : "ami-10b68a78",
		"ssh_timeout"           : "10m",
		"ssh_username"          : "ubuntu",
		"instance_type"         : "t1.micro"
	}

	],

	"provisioners"    :   
	[           
	{                            
		"type"                  : "shell",
		"execute_command"       : "{{ .Vars }} sudo  -E -S bash -c '{{ .Path }}'",
		"scripts"               : ["consul/common/install.consul.sh"]
	},

	{
		"type"  				: "file",
		"source"				: "consul/consul.d/server.json",
		"destination"			: "/tmp/server.json"
	},

	{
		"type"  				: "file",
		"source"				: "consul/consul.d/aws.json",
		"destination"			: "/tmp/aws.json"
	},

	{
		"type"  				: "file",
		"source"				: "consul/upstart/consul.conf",
		"destination"			: "/tmp/consul.conf"
	},

	{
		"type"                  : "shell",
		"execute_command"       : "{{ .Vars }} sudo  -E -S bash -c '{{ .Path }}'",
		"inline"                : ["mv /tmp/server.json /etc/consul.d/server.json"]
	},

	{
		"type"                  : "shell",
		"execute_command"       : "{{ .Vars }} sudo  -E -S bash -c '{{ .Path }}'",
		"inline"                : ["mv /tmp/aws.json /etc/consul.d/aws.json"]
	},

	{
		"type"                  : "shell",
		"execute_command"       : "{{ .Vars }} sudo  -E -S bash -c '{{ .Path }}'",
		"inline"                : ["mv /tmp/consul.conf /etc/init/consul.conf"]
	}
				
	
	],                        
                             
	"post-processors" : 
	[                  
                             
	{
		"type"                  : "atlas",
		"artifact"              : "{{user `ATLAS_USERNAME`}}/{{user `ATLAS_NAME`}}",
		"artifact_type"         : "amazon.image",
		"metadata"              : {"created_at": "{{timestamp}}"}
	}                           
                                        
	],                                  
                                       
	"push"           :
	{
		"name"                  : "{{user `ATLAS_USERNAME`}}/{{user `ATLAS_NAME`}}",
		"vcs"                   : false
	}          
}